{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": ["--recursive", "out/**/*_test.js"],
			"sourceMaps": true,
            "cwd": "${workspaceRoot}",
			"outFiles": ["${workspaceRoot}/out/**/*.js"],
            "preLaunchTask": "yarn"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}